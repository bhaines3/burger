<div class="container">
	
	<div class="jumbrotron text-center">
			<img src="assets/images/burger-logo.svg" alt="Eat-Da-Burger">
	        <h1>Eat-Da-Burger App</h1>
	        <p></p>
  	</div>


	<div class="row">
	    <div class="col-6">

			<h2>Awaiting to be eaten!</h2>

			<ul>
			  {{#each burgers}}
			    {{#unless this.devoured}}
			      <li class="rounded">
			      	{{this.id}}
			        {{this.burger_name}}

			        <form action="/{{this.id}}?_method=PUT" method="POST">
			          <input type="hidden" name="devoured" value="true">
			          <button class="btn-outline-dark" type="submit">DEVOUR IT!!</button>
			        </form>

			      </li>
			    {{/unless}}
			  {{/each}}
			</ul>

	    </div>

	    <div class="col-6">

			<h2>BURGERS DEVOURED!!</h2>
			
			  {{#each burgers}}
			    {{#if this.devoured}}
			      <li>
			      	{{this.id}}
			        {{this.burger_name}}

			      </li>
			    {{/if}}
			  {{/each}}
			
	    </div>

  	</div>

	<div class="row">
	    <div class="center col-12">

			<h2>Add A Burger!</h2>

			<form class="create-update-form" action="/" method="POST">

			  <div class="form-group">
			    <p class="font-weight-bold">What burger would you like today?</p>
			    <input type="text" id="ca" name="burger_name">
			  </div>
			  
			  <button class="btn-warning" type="submit">Submit Order</button>
			</form>

	    </div>
	
  	</div>

</div>